{
  "root": true,
  "parser": "@typescript-eslint/parser", // Allows eslint to understand TS
  "plugins": ["@typescript-eslint"], // Loads the base TS rule set, may not be needed?
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ], // Tells eslint that we're extending multiple rule sets
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "parserOptions": {
    "ecmaVersion": "latest", // Allows eslint to understand newer JS features
    "sourceType": "module" // Allows use of module imports
  }
}
